Package: forestSim
Title: Simulate and Analyze Random Forest Performance Over Tree Growth
Version: 1.0.0.0000
Authors@R: 
    c(
      person("Josef", "redacted", email = "redacted@redacted.red", role = c("aut")),
      person("Marc", "redacted", email = "redacted@redacted.red", role = c("aut")),
      person("Clemens", "redacted", email = "redacted@redacted.red", role = c("aut", "cre"))
